@model Customer
<h3>@ViewBag.Action Customer</h3>

@if (ViewBag.Action == "Add")
{
<form asp-action="Edit" asp-controller="Customer" method="post">
    <input type="hidden" id="customerId" name="customerId" asp-for="customerId" value="0" />
    <label for="customerFirstName">First Name</label>
    <input type="text" id="customerFirstName" name="customerFirstName" asp-for="customerFirstName" />
    <br />
    <label for="customerLastName">Last Name</label>
    <input type="text" id="customerLastName" name="customerLastName" asp-for="customerLastName" />
    <br />
    <label for="customerAddress">Address</label>
    <input type="text" id="customerAddress" name="customerAddress" asp-for="customerAddress" />
    <br />
    <label for="customerCity">City</label>
    <input type="text" id="customerCity" name="customerCity" asp-for="customerCity" />
    <br />
    <label for="customerState">State</label>
    <input type="text" id="customerState" name="customerState" asp-for="customerState" />
    <br />
    <label for="customerPostalCode">Postal Code</label>
    <input type="text" id="customerPostalCode" name="customerPostalCode" asp-for="customerPostalCode" />
    <br />
    <label for="customerCountryId">Country</label>
    <select id="customerCountryId" name="customerCountryId" asp-for="customerCountryId">
        <option selected="selected" value="">Select a country...</option>
        @foreach (Country country in ViewBag.Country)
        {
            <option value="@country.countryId">@country.countryName</option>
        }
    </select>
    <br />
    <label for="customerEmail">Email</label>
    <input type="text" id="customerEmail" name="customerEmail" asp-for="customerEmail" />
    <br />
    <label for="customerPhone">Phone</label>
    <input type="text" id="customerPhone" name="customerPhone" asp-for="customerPhone" />
    <br /><br />
    <input class="btn btn-primary"type="submit" value="Save" />
    <button class="btn btn-primary"type="button" onclick="location.href='@Url.Action("List", "Customer")'">Cancel</button>
</form>
}
@if (ViewBag.Action == "Edit")
{
<form asp-action="Edit" asp-controller="Customer" method="post">
    <input type="hidden" id="customerId" name="customerId" asp-for="customerId" value="@Model.customerId" />
    <label for="customerFirstName">First Name</label>
    <input type="text" id="customerFirstName" name="customerFirstName" value="@Model.customerFirstName" asp-for="customerFirstName" />
    <br />
    <label for="customerLastName">Last Name</label>
    <input type="text" id="customerLastName" name="customerLastName" value="@Model.customerLastName" asp-for="customerLastName" />
    <br />
    <label for="customerAddress">Address</label>
    <input type="text" id="customerAddress" name="customerAddress" value="@Model.customerAddress" asp-for="customerAddress" />
    <br />
    <label for="customerCity">City</label>
    <input type="text" id="customerCity" name="customerCity" value="@Model.customerCity" asp-for="customerCity" />
    <br />
    <label for="customerState">State</label>
    <input type="text" id="customerState" name="customerState" value="@Model.customerState" asp-for="customerState" />
    <br />
    <label for="customerPostalCode">Postal Code</label>
    <input type="text" id="customerPostalCode" name="customerPostalCode" asp-for="customerPostalCode" />
    <br />
    <label for="customerCountryId">Country</label>
    <select id="customerCountryId" name="customerCountryId" asp-for="customerCountryId">
        <option selected="selected" disabled>Select a country...</option>
        @foreach (Country country in ViewBag.Country)
        {
            <option value="@country.countryId">@country.countryName</option>
        }
    </select>
    <br />
    <label for="customerEmail">Email</label>
    <input type="text" id="customerEmail" name="customerEmail" value="@Model.customerEmail" asp-for="customerEmail" />
    <br />
    <label for="customerPhone">Phone</label>
    <input type="text" id="customerPhone" name="customerPhone" value="@Model.customerPhone" asp-for="customerPhone" />
    <br /><br />
    <input class="btn btn-primary"type="submit" value="Save" />
    <button class="btn btn-primary"type="button" onclick="location.href='@Url.Action("List", "Customer")'">Cancel</button>
</form>
}